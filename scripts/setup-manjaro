# VersÃ£o experimental (em desenvolvimento)
# Objetivo: InstalaÃ§Ã£o automatizada de pacotes Manjaro

function installPackageIfNotInstalled() {
  local package=$1
  local command=${2:-$1}

  echo ""
  echo "> PACKAGE: '$package' ('$command')"

  if ! command -v $command &> /dev/null
  then
    echo "  â— NÃ£o instalado"
    echo "  ðŸ”¨ Instalando..."
    sudo pacman -Sy $package --noconfirm
    # echo "  âœ… Feito!"
  else
    echo "  â˜‘ï¸  JÃ¡ instalado"
  fi
}

#installPackageIfNotInstalled "alacritty"
